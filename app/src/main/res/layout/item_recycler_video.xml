<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_row"
    android:padding="@dimen/activity_margin_small">

    <ImageView
        android:id="@+id/icon_video"
        android:layout_width="@dimen/icon_video_width"
        android:layout_height="@dimen/icon_video_height"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_margin_small"
        android:layout_marginRight="@dimen/activity_margin_small"
        android:scaleType="centerCrop"
        android:src="@drawable/icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_margin_small_extra"
        android:layout_marginRight="@dimen/activity_margin_small_extra"
        android:layout_toEndOf="@id/icon_video"
        android:layout_toRightOf="@id/icon_video"
        android:ellipsize="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/size_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    </LinearLayout>

</RelativeLayout>